<% include ../nav/header.ejs %>
<section class="aui-content-padded my-bottom">
    <h1>添加地址</h1>
    <form action="/wx/addaddress?type=1" method="post">
        <div class="aui-content aui-margin-b-15">
            <ul class="aui-list aui-form-list">
                <li class="aui-list-item">
                    <div class="aui-list-item-inner">
                        <div class="aui-list-item-label">
                            联系人
                        </div>
                        <div class="aui-list-item-input">
                            <input type="text" placeholder="您的姓名" name="name">
                        </div>
                    </div>
                </li>
                <li class="aui-list-item">
                    <div class="aui-list-item-inner">
                        <div class="aui-list-item-label">
                           称呼
                        </div>
                        <div class="aui-list-item-input">
                            <label><input class="aui-radio" type="radio" name="sex" value="1" checked> 先生</label>
                            <label><input class="aui-radio" type="radio" name="sex" value="0"> 女士</label>
                        </div>
                    </div>
                </li>
                <li class="aui-list-item">
                    <div class="aui-list-item-inner">
                        <div class="aui-list-item-label">
                            手机号码
                        </div>
                        <div class="aui-list-item-input">
                            <input type="tel" placeholder="配送员联系您的电话" name="mobile">
                        </div>
                    </div>
                </li>
                <li class="aui-list-item">
                    <div class="aui-list-item-inner">
                        <div class="aui-list-item-label">
                            门牌号
                        </div>
                        <div class="aui-list-item-input">
                            <input type="text" placeholder="详细地址，例:9栋454" name="site">
                        </div>
                    </div>
                </li>
                <li class="aui-list-item">
                    <div class="aui-list-item-inner">
                        <div class="aui-list-item-label">
                            是否默认
                        </div>
                        <div class="aui-list-item-input my">
                            <input type="checkbox" class="aui-switch" name="isdefault" checked>
                        </div>
                    </div>
                </li>
                <li class="aui-list-item">
                    <div class="aui-list-item-inner aui-list-item-center aui-list-item-btn">
                        <input type="submit" class="aui-btn my-green aui-btn-info aui-margin-r-5" value="保存">
                    </div>
                </li>
            </ul>
        </div>
    </form>
    <div class="aui-card-list">
        <div class="aui-card-list-header">
            <div><span class="aui-text-danger"> 我的收货地址</span></div>
            <i class="aui-iconfont aui-icon-more"></i>
        </div>
        <div class="aui-card-list-content">
            <ul class="aui-list aui-media-list">
                <% list.forEach(function(l){ %>
                <li class="aui-list-item aui-list-item-middle">
                    <div class="aui-media-list-item-inner">
                        <% if(l.isdefault === 1){ %>
                        <div class="aui-list-item-media" style="width: 3rem;">
                            默认
                        </div>
                        <%}%>
                        <div class="aui-list-item-inner aui-list-item-arrow">
                            <div class="aui-list-item-text">
                                <div class="aui-list-item-title aui-font-size-14"><%= l.district %><%= l.area %><%= l.site %></div>
                                <div class="aui-list-item-right" onclick="window.location.href= '/wx/modifyaddresspage?id=<%= l.id %>&type=1';return false">修改</div>
                            </div>
                            <div class="aui-list-item-text">
                                <%= l.name %>  <%=l.mobile%>
                            </div>
                        </div>
                    </div>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>
</section>
<script type="text/javascript" src="/aui/script/api.js" ></script>
<script type="text/javascript" src="/aui/script/aui-tab.js" ></script>
<script type="text/javascript" src="/javascript/jquery-3.1.1.js"></script>
