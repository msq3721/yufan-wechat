<% include ../main/navcommom.ejs %>
<link rel="stylesheet" href="/bootstrap/css/bootstrap-datetimepicker.css">
<style>
    form{
        width: 60%;
    }
</style>
<h1><%= title %></h1>
<form class="form-horizontal" role="form" method="post" action="upgift">
    <div class="form-group">
        <label for="firstname" class="col-sm-2 control-label">礼物名</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="请输入礼物名" autocomplete="off">
        </div>
    </div>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">描述</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="abstract" name="abstract" placeholder="请输入描述" autocomplete="off">
        </div>
    </div>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">预览图</label>
        <div class="col-sm-10">
            <input type="text" class="form-control"  name="imgurl" placeholder="请输入图片id" autocomplete="off">
        </div>
    </div>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">类别</label>
        <div class="col-sm-10">
            <input type="radio" name="type"  value="4" checked>礼物
        </div>
    </div>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">积分</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="balance" name="balance" placeholder="花费积分" autocomplete="off">
        </div>
    </div>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">开始时间</label>
        <div class="col-sm-10">
            <input class="form_datetime form-control " type="text" placeholder="开始时间" size="16" autocomplete="off" name="startdate">
        </div>
    </div>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">结束时间</label>
        <div class="col-sm-10">
            <input class="form_datetime form-control " type="text" placeholder="结束时间" size="16" autocomplete="off" name="enddate">
        </div>
    </div>
    <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">文本</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="5" name="page"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">提交</button>
        </div>
    </div>
</form>

<% include ../main/footer.ejs %>
<script src="/bootstrap/js/bootstrap-datetimepicker.js"></script>
<script src="/bootstrap/js/bootstrap-datetimepicker.zh-CN.js"></script>
<script>
    $(".form_datetime").datetimepicker({
        format: "yyyy-mm-dd",
        autoclose: true,
        todayBtn: true,
        todayHighlight: true,
        showMeridian: true,
        pickerPosition: "bottom-left",
        language: 'zh-CN',//中文，需要引用zh-CN.js包
        startView: 2,//月视图
        minView: 2//日期时间选择器所能够提供的最精确的时间选择视图
    });


</script>